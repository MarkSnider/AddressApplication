<form-validation>

<!--
     This is a minimal Validator form file with a couple of examples.
-->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>

        <!-- An example form -->
        <form name="EditForm">
            <field
                property="name"
                depends="required">
                    <arg key="EditForm.name"/>
            </field>
            <field
                property="name"
                depends="toolarge">
                    <arg key="EditForm.name"/>
            </field>
            <field
                property="street"
                depends="toolarge">
                    <arg key="EditForm.street"/>
            </field>
             <field
                property="street"
                depends="required">
                    <arg key="EditForm.street"/>
            </field>           
            <field
                property="city"
                depends="required">
                    <arg key="EditForm.city"/>
            </field>
            <field
                property="city"
                depends="toolarge">
                    <arg key="EditForm.city"/>
            </field>                  
              <field
                property="state"
                depends="required">
                    <arg key="EditForm.state"/>
            </field>
               <field
                property="state"
                depends="toolarge">
                    <arg key="EditForm.state"/>
            </field>           
    
              <field
                property="zip"
                depends="required">
                    <arg key="EditForm.zip"/>
            </field>  
              <field
                property="zip"
                depends="toolarge">
                    <arg key="EditForm.zip"/>
            </field> 
                                    
              <field
                property="homePhone"
                depends="required">
                    <arg key="EditForm.homePhone"/>
            </field>               
                <field
                property="homePhone"
                depends="toolarge">
                    <arg key="EditForm.homePhone"/>
            </field> 
                       
           <field
                property="cellPhone"
                depends="required">
                    <arg key="EditForm.cellPhone"/>
            </field> 
            <field
                property="cellPhone"
                depends="toolarge">
                    <arg key="EditForm.cellPhone"/>
            </field> 
                       
                          
           <field
                property="homeEmail"
                depends="required">
                    <arg key="EditForm.homeEmail"/>
            </field>  
           <field
                property="homeEmail"
                depends="toolarge">
                    <arg key="EditForm.homeEmail"/>
            </field>                  
           <field
                property="workEmail"
                depends="required">
                    <arg key="EditForm.workEmail"/>
            </field>  
           <field
                property="workEmail"
                depends="toolarge">
                    <arg key="EditForm.workEmail"/>
            </field>              
        </form>

    </formset>


</form-validation>
